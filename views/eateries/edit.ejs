<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Eatery</h1>
    <div class="col-6 offset-3">
        <form action="/eateries/<%= eatery._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="eatery[title]"
                    value="<%= eatery.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="eatery[location]"
                    value="<%= eatery.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add Images</label>
                <input type="file" name="image" id="image" multiple>
            <div class="mb-3">
                <label for="price" class="form-label">eatery Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">Rs</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="eatery[price]" value="<%= eatery.price %>" required>
                </div>
            </div>
            <div class="mb-4">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="eatery[description]" required><%= eatery.description %> </textarea>
            </div>
            <div class="mb-3 text-center">
                <button class="btn btn-info">Update</button>
            </div>
            <div class="text-center">
                <a href="/eateries/<%= eatery._id %>">Back</a>
            </div>
        </form>
    </div>
</div>